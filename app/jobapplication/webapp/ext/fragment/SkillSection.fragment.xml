        <Text id="_IDGenText6" text="{i18n>javaSkript}" width="100px" />
        <RatingIndicator id="_IDGenRatingIndicator7" value="{path: 'skills/0/javaSkript', targetType: 'any'}" maxValue="5" enabled="false" iconSize="1rem" />
      </HBox>
      <HBox id="_IDGenHBox7" alignItems="Center">
        <Text id="_IDGenText7" text="{i18n>python}" width="100px" />
        <RatingIndicator id="_IDGenRatingIndicator8" value="{path: 'skills/0/python', targetType: 'any'}" maxValue="5" enabled="false" iconSize="1rem" />
      </HBox>
    </VBox>

  </layout:Grid>
</core:FragmentDefinition>
